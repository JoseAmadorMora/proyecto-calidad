@model tutorias.Backend.Tutoring.TutoringModel

@{
    ViewData["Title"] = "Agregar tutoría";
}

<div class="container mt-4">
    <h2>Agregar nueva tutoría</h2>

    <form asp-action="AddTutorship" method="post">
        <div class="mb-3">
            <label class="form-label">Curso</label>
            <input asp-for="CourseName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Sede</label>
            <input asp-for="Sede" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Escuela</label>
            <input asp-for="School" class="form-control" required />
        </div>
        <input type="hidden" asp-for="ProfessorId" value="@ViewBag.UserId" />
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Main" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>