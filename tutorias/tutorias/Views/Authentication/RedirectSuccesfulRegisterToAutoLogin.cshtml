@model tutorias.Models.UserModel

<form id="postRedirectForm" asp-action="login" asp-controller="Authentication" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Password" />
    <input type="hidden" asp-for="UserType" />
</form>

<div class="text-center mt-5">
    <p>Redirigiendo, por favor espera...</p>
</div>

<script>
    document.getElementById('postRedirectForm').submit();
</script>
